<h3 class="ui header">{{t "forms.i-i-s-otdel-kadrov-2-таб-уч-р-в-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-otdel-kadrov-2-таб-уч-р-в-e.датаДк-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаДк
      class=(if (v-get validationModel "датаДк" "isInvalid") "error")
      data-test-i-i-s-otdel-kadrov-2-таб-уч-р-в-e-датаДк=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаДк" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.руководитель
      class=(if (v-get validationModel "руководитель" "isInvalid") "error")
      label=(t "forms.i-i-s-otdel-kadrov-2-таб-уч-р-в-e.руководитель-caption")
      data-test-i-i-s-otdel-kadrov-2-таб-уч-р-в-e-руководитель=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "руководитель" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-otdel-kadrov-2-таб-уч-р-в-e.период-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.период
      class=(if (v-get validationModel "период" "isInvalid") "error")
      data-test-i-i-s-otdel-kadrov-2-таб-уч-р-в-e-период=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "период" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.исполнитель
      class=(if (v-get validationModel "исполнитель" "isInvalid") "error")
      label=(t "forms.i-i-s-otdel-kadrov-2-таб-уч-р-в-e.исполнитель-caption")
      data-test-i-i-s-otdel-kadrov-2-таб-уч-р-в-e-исполнитель=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "исполнитель" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-otdel-kadrov-2-таб-уч-р-в-e.отделКадров-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.отделКадров
      relationName="отделКадров"
      projection="ОтделКадровL"
      title=(t "forms.i-i-s-otdel-kadrov-2-таб-уч-р-в-e.отделКадров-caption")
      readonly=readonly
      componentName="отделКадровLookup"
      class=(if (v-get validationModel "отделКадров" "isInvalid") "error")
      data-test-i-i-s-otdel-kadrov-2-таб-уч-р-в-e-отделКадров=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "отделКадров" "message")}}
  </div>
</form>
